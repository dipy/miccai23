name: Build and Push Quantconn Docker Image

on: [push, pull_request]

jobs:
  build:
    runs-on: ubuntu-latest
    # permissions:
    #   contents: read
    #   pull-requests: write
    steps:
    - name: Set up QEMU
      uses: docker/setup-qemu-action@v1

    - name: Set up Docker Buildx
      uses: docker/setup-buildx-action@v1

    - name: Checkout repo
      uses: actions/checkout@v3

    - name: Build Quantconn docker image
      run: sh ./quantconn_docker/docker-build.sh \
        "${{github.sha}}" "dipy"

    - name: Build a tagged image
      if: startsWith(github.event.ref, 'refs/tags')
      run: |
        sh ./quantconn_docker/docker-build.sh \
          "${GITHUB_REF:10}" "dipy"

    - name: Login to GHCR
      if: github.ref == 'refs/heads/master' || startsWith(github.event.ref, 'refs/tags')
      uses: docker/login-action@v1
      with:
        registry: ghcr.io
        username: ${{ github.actor }}
        password: ${{ secrets.GITHUB_TOKEN }}

    - name: Push Quantconn docker image
      if: github.ref == 'refs/heads/master' || startsWith(github.event.ref, 'refs/tags')
      run: sh ./quantconn_docker/docker-push.sh "dipy"
